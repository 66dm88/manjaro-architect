version=@version@

LIBDIR='@libdir@'
DATADIR='@datadir@'

[[ -r ${LIBDIR}/util.sh ]] && source ${LIBDIR}/util.sh

import ${LIBDIR}/util-menu.sh
import ${LIBDIR}/util-base.sh
import ${LIBDIR}/util-desktop.sh
import ${LIBDIR}/util-disk.sh

id_system
LOG "system: $SYSTEM, init: $H_INIT nw-client: $NW_CMD"
select_language
mk_connection
check_requirements
greeting

while true; do
    main_menu_online
done
