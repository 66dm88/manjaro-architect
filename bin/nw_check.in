"""connectivity check, kindly contributed by @fhdk"""

import sys
from urllib.request import urlopen

remote_host = "https://manjaro.org"
maxwait = 2
data = None
try:
    data = urlopen(remote_host, timeout=maxwait)
except:
    pass

if data:
    sys.exit(0)
else:
    sys.exit(1)
